		"pino-pretty": "^13.1.3",
		"zod": "*"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"@typescript/native-preview": "7.0.0-dev.20260104.1",
		"concurrently": "*",
		"oxfmt": "*",
		"oxlint": "*",
		"tsdown": "0.19.0-beta.2",
		"vitest": "*"
	}
}
