{
	"name": "gunshi-mcp",
	"version": "1.0.0",
	"description": "Gunshi plugin that exposes CLI commands as MCP tools and loads prompts from prompts/ folder",
	"keywords": [
		"cli",
		"gunshi",
		"mcp",
		"model-context-protocol",
		"plugin"
	],
	"homepage": "https://github.com/rektide/gunshi-mcp#readme",
	"bugs": {
		"url": "https://github.com/rektide/gunshi-mcp/issues"
	},
	"license": "MIT",
	"author": "rektide de la faye",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rektide/gunshi-mcp.git"
	},
	"type": "module",
	"main": "gunshi-mcp.js",
	"module": "gunshi-mcp.js",
	"exports": {
		".": "./gunshi-mcp.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"test": "vitest",
		"typecheck": "tsgo",
		"lint": "oxlint",
		"format": "oxfmt",
